{
    "name": "nodejs-restful-starter-kit",
    "version": "1.0.0",
    "description": "NodeJS Test App",
    "main": "app.js",
    "scripts": {
        "start": "babel-watch app.js",
        "test": "ava --watch",
        "lint": "eslint --fix --ext .js ."
    },
    "author": "Buhori Dermawan",
    "license": "ISC",
    "dependencies": {
        "babel-cli": "^6.26.0",
        "babel-eslint": "^8.2.3",
        "babel-preset-node6": "^11.0.0",
        "bcrypt": "^1.0.3",
        "body-parser": "^1.14.0",
        "dotenv": "^4.0.0",
        "express": "^4.13.3",
        "jsonschema": "^1.2.0",
        "jsonwebtoken": "^7.3.0",
        "mysql": "^2.9.0",
        "mysql2": "^1.5.0",
        "sequelize": "^4.22.6",
        "sequelize-cli": "^3.0.0"
    },
    "devDependencies": {
        "ava": "^0.23.0",
        "nyc": "^11.8.0",
        "babel-preset-es2015": "^6.24.1",
        "babel-watch": "^2.0.7",
        "eslint": "^4.19.1",
        "eslint-config-airbnb": "^16.1.0",
        "eslint-plugin-import": "^2.12.0",
        "eslint-plugin-react": "^7.8.2",
        "eslint-plugin-jsx-a11y": "^6.0.3"
    },
    "nyc": {
        "per-file": true,
        "lines": 95,
        "statements": 95,
        "functions": 95,
        "branches": 95,
        "reporter": [
            "lcov"
        ],
        "exclude": [
            "**/src/repositories/*.js",
            "**/src/libs/*.js",
            "**/tests/**"
        ]
    },
    "ava": {
        "files": [
            "tests/*.js"
        ],
        "source": [
            "**/*.{js,jsx}"
        ],
        "concurrency": 5,
        "failFast": true,
        "failWithoutAssertions": false,
        "tap": true,
        "powerAssert": false,
        "require": [
            "babel-register"
        ],
        "babel": "inherit"
    }
}
